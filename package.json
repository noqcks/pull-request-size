{
  "name": "size",
  "version": "1.1.0",
  "description": "Applies size labels to Pull Requests",
  "author": "Benji Visser <benji@093b.org>",
  "license": "MIT",
  "repository": "https://github.com/noqcks/size.git",
  "homepage": "https://github.com/noqcks/size",
  "bugs": "https://github.com/noqcks/size/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./src/index.js",
    "lint": "standard --fix",
    "test": "jest",
    "coverage": "jest --collect-coverage",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "@noqcks/generated": "^1.0.1",
    "@probot/adapter-aws-lambda-serverless": "^3.0.1",
    "@sentry/node": "^4.3.0",
    "minimatch": "^5.1.0",
    "probot": "^12.2.5",
    "serverless": "^3.20.0"
  },
  "devDependencies": {
    "eslint": "^8.26.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.2",
    "nock": "^13.2.8",
    "nodemon": "^2.0.19",
    "smee-client": "^1.2.3",
    "standard": "^17.0.0"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70
      }
    }
  }
}
